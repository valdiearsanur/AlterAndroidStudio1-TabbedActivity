<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/shape_rectangle"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Resto Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cityname"
                android:layout_weight="1"
                android:textSize="24sp" />

            <TextView
                android:text="Fast Food, Cafe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:layout_weight="1" />

            <TextView
                android:drawablePadding="2dp"
                android:drawableLeft="@drawable/ic_place_black_24dp"
                android:text="Jl. Kantor Pos No. 6, Bogor Timur, Bogor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/capital"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:text="8.00-24.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingTop="5dp">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:text="Rp 80.000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:background="@android:color/holo_green_dark"
                        android:textColor="@android:color/background_light"
                        android:padding="2dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp" />

                    <TextView
                        android:text="2 Orang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:layout_marginStart="5dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp">

            <ImageView
                app:srcCompat="@drawable/resto_placeholder"
                android:scaleType="centerCrop"
                android:id="@+id/imageView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp" />

            <ImageView
                app:srcCompat="@drawable/resto_placeholder"
                android:scaleType="centerCrop"
                android:id="@+id/imageView5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
